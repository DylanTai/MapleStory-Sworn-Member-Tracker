<h1>New Member</h1>
<form action="/members" method="POST" class="card form">
  <label
    >IGN
    <input name="ign" required />
  </label>
  <label
    >Discord
    <input name="discord" />
  </label>
  <label
    >Active
    <input type="checkbox" name="isActive" checked />
  </label>
  <label
    >Culvert Best
    <input
      name="culvertBest"
      type="number"
      min="0"
      step="1"
      value="0"
    /> </label
  ><label
    >Notes
    <textarea name="notes"></textarea>
  </label>
  <div class="actions">
    <button class="btn" type="submit">Create</button>
    <a class="btn ghost" href="/members">Cancel</a>
  </div>
</form>
