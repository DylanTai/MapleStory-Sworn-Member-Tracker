<div class="member-avatar-top">
  <img
    class="member-avatar-large"
    src="<%= member.avatarUrl || 'https://via.placeholder.com/120' %>"
    alt=""
  />
</div>
<h1>Edit Member</h1>
<% /* avatar preview top */ const avatarSrc = member.avatarUrl ?
member.avatarUrl : "https://via.placeholder.com/120"; %>
<div
  class="card"
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 12px;
  "
>
  <img src="<%= avatarSrc %>" class="avatar" alt="avatar" />
</div>
<div class="actions">
  <form
    action="/members/<%= member._id %>/refresh-avatar"
    method="POST"
    class="inline"
  >
    <button class="btn ghost" type="submit">Refresh Avatar</button>
  </form>
</div>
<form
  action="/members/<%= member._id %>?_method=PUT"
  method="POST"
  class="card form"
>
  <label
    >IGN
    <input name="ign" required value="<%= member.ign %>" />
  </label>
  <label
    >Discord
    <input name="discord" value="<%= member.discord || '' %>" />
  </label>
  <label
    >Active <input type="checkbox" name="isActive" <%= member.isActive ?
    'checked' : '' %>>
  </label>
  <label
    >Culvert Best
    <input
      name="culvertBest"
      type="number"
      min="0"
      step="1"
      value="<%= member.culvertBest || 0 %>"
    /> </label
  ><label
    >Notes
    <textarea name="notes"><%= member.notes || '' %></textarea>
  </label>
  <div class="actions">
    <button class="btn" type="submit">Save</button>
    <a class="btn ghost" href="/members/<%= member._id %>">Cancel</a>
  </div>
</form>
